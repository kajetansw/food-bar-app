{
  "name": "food-bar-app",
  "version": "1.0.0",
  "description": "App for managing recipes and generating shopping lists.",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clear && tsc",
    "clear": "rimraf dist",
    "start": "yarn start:prod",
    "start:dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node -r ./tsconfig-paths.js dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --watch src --ext ts --ignore '*.spec.ts' --exec yarn start:dev"
  },
  "author": "Kajetan Swiatek",
  "license": "ISC",
  "dependencies": {
    "@marblejs/core": "^2.1.1",
    "@marblejs/middleware-body": "^2.1.1",
    "@marblejs/middleware-io": "^2.1.1",
    "@marblejs/middleware-logger": "^2.1.1",
    "rxjs": "^6.5.2",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
